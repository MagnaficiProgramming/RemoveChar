// Problem: Write a program that returns a String without a given character

public class RemoveChar{
    public static void main(String[] args){
        System.out.println("This should return Miiippi: " + removeChar("Mississippi", 's'));
        System.out.println("This should return Clbss: " + removeChar("Calabasas", 'a'));
    }

    private static String removeChar(String str, char c){
        if(str == null) {
            return null;
        }

        return str.replaceAll(Character.toString(c), "");
    }
}
